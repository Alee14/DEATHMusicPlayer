<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:vm="using:FRESHMusicPlayer.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="600" Height="400"
        x:Class="FRESHMusicPlayer.Views.Settings" WindowStartupLocation="CenterOwner"
        Icon="/Assets/icon.ico" Title="FRESHMusicPlayer Settings">
	
	<Window.DataContext>
		<vm:SettingsViewModel/>
	</Window.DataContext>
			
	<TabControl TabStripPlacement="Left" SelectedIndex="0">
		<TabItem Header="General">
			<StackPanel Margin="10">
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
					<TextBlock Text="Language" Margin="0,0,10,0" VerticalAlignment="Center"/>
					<ComboBox IsEnabled="False">
						<ComboBoxItem Content="Automatic"/>
						<ComboBoxItem Content="English"/>
					</ComboBox>
				</StackPanel>
				<CheckBox Content="Playtime Logging" IsChecked="{Binding PlaytimeLogging}"/>
				<CheckBox Content="Show time in window title" IsChecked="{Binding ShowTimeInWindow}"/>

				<TextBlock FontWeight="Bold" FontSize="18" Text="Auto Import"/>
				
				<TextBlock Text="FMP will import new tracks from these folders:"/>
				<Button Content="Add Folder" IsEnabled="False"/>
				<Button Content="Clear All" IsEnabled="False"/>
				
				<TextBlock FontWeight="Bold" FontSize="18" Text="Integrations"/>
				
				<CheckBox Content="Discord Rich Presence" IsChecked="{Binding IntegrateDiscordRPC}" IsEnabled="False"/>
				<CheckBox Content="MPRIS" IsVisible="{Binding IsRunningOnLinux}" IsChecked="{Binding IntegrateMPRIS}"/>
				<CheckBox Content="Show cover art in MPRIS" Margin="20,0,0,0" IsChecked="{Binding MPRISShowCoverArt}" IsVisible="{Binding IsRunningOnLinux}"/>
				<TextBlock Text="Will write temporary files to the temp directory" Margin="20,0,0,0" Foreground="{DynamicResource ThemeControlLowBrush}" IsVisible="{Binding IsRunningOnLinux}"/>
				
				<TextBlock FontWeight="Bold" FontSize="18" Text="Updates" IsVisible="{Binding IsRunningOnMac}"/>
				
				<CheckBox Content="Let me know about new versions of FMP" IsChecked="{Binding CheckForUpdates}" IsVisible="{Binding IsRunningOnMac}"/>
			</StackPanel>
		</TabItem>
		<TabItem Header="Appearance">
			
		</TabItem>
		<TabItem Header="Maintenance">
			
		</TabItem>
		<TabItem Header="About FMP">
			<StackPanel Margin="10" HorizontalAlignment="Stretch">
				<Image Source="/Assets/fmplogofull.png" Stretch="UniformToFill" Width="300" HorizontalAlignment="Left" Margin="0,0,0,20"/>
				<TextBlock Text="FRESHMusicPlayer (for Mac and Linux) Ver. 69420"/>
				<TextBlock Text="by Squid Grill (and open source contributors)"/>
				<TextBlock Text="Licensed under the GPL v3 license" Margin="0,0,0,20"/>
			
				<TextBlock Text="Thank you for using FRESHMusicPlayer! ❤" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
			
				<Button Content="Report an issue" Command="{Binding ReportIssueCommand}"/>
				<Button Content="View source code" Command="{Binding ViewSourceCodeCommand}"/>
				<Button Content="View license" Command="{Binding ViewLicenseCommand}"/>
				<Button Content="FMP on the interwebs" Command="{Binding ViewWebsiteCommand}"/>
			</StackPanel>
		</TabItem>
	</TabControl>
</Window>
