<UserControl x:Class="FRESHMusicPlayer.Handlers.Notifications.NotificationBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FRESHMusicPlayer_WPF_UI_Test.Handlers.Notifications"
             mc:Ignorable="d" 
             d:DesignHeight="120
             " d:DesignWidth="200" Margin="0,5">
    <Grid>
        <Grid Background="#FF2C2F33">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="HeaderLabel" Margin="2" TextWrapping="Wrap" Text="Notification" Foreground="White" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="ContentLabel" Margin="2,2,2,2" Grid.Row="1" Foreground="#FFDADADA" FontSize="10" Text="Testing" TextWrapping="Wrap"/>
        </Grid>

    </Grid>
</UserControl>
