<Window x:Class="FRESHMusicPlayer.Forms.PlaylistManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FRESHMusicPlayer.Forms"
        mc:Ignorable="d"
        Title="PlaylistManagement" Height="140" Width="200">
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Which playlist do you want to add this to?" Foreground="{StaticResource PrimaryTextColor}" Grid.Row="0" TextWrapping="Wrap" Margin="10,10,10,0"/>
        <TextBox x:Name="Box" Grid.Row="1" Background="{StaticResource BackgroundColor}" Foreground="{StaticResource PrimaryTextColor}" BorderBrush="{StaticResource SecondaryTextColor}" Margin="5"/>
        <Button x:Name="Okboomer" Grid.Row="2" Margin="10" Click="Okboomer_Click">OK</Button>
    </Grid>
</Window>
